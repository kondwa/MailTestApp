@model MailTestApp.Models.MailModel

@{
    ViewBag.Title = "View";
}

<h2>View</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>MailModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>From:</label>
        <input class="form-control" type="email" name="@nameof(Model.From)" value="@(Model.From)" />
    </div>
    <div class="form-group">
        <label>To:</label>
        <input class="form-control" type="email" name="@nameof(Model.To)" value="@(Model.To)" />
    </div>
    <div class="form-group">
        <label>Subject:</label>
        <input class="form-control" type="text" name="@nameof(Model.Subject)" value="@(Model.Subject)" />
    </div>
    <div class="form-group">
        <label>From:</label>
        <textarea class="form-control" name="@nameof(Model.Message)">@(Model.Message)</textarea>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
